{
  "manifest_version": 2,
  "name": "VertExtension",
  "description": "An extension to notify users to 'hit the spot'",
  "version": "1.0",
  "author": "Lucas Moutinho and Thiago Barros",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_title": "VertExtension",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },

  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },

  "permissions": [
    "activeTab", "notifications", "alarms"
  ]
}